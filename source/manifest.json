{
	"name": "GMail Background GIF",
	"version": "1.0.0",
	"description": "Makes animated GIFs as GMail background possible. Add a GIF in a Google Photos album and use it as theme in GMail settings.",
	"manifest_version": 3,
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"declarativeNetRequestWithHostAccess"
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "{45d40588-c9d9-4a33-a1fb-d7ae708a2471}"
		}
	},
	"declarative_net_request" : {
		"rule_resources" : [{
			"id": "ruleset",
			"enabled": true,
			"path": "rules.json"
		}]
	},
	"host_permissions": [
		"*://mail.google.com/*",
		"*://lh3.googleusercontent.com/*"
	]
}
