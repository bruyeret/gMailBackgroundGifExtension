{
	"name": "GMail GIF",
	"version": "1.0.0",
	"description": "Make animated GIFs as background possible",
	"homepage_url": "https://mail.google.com",
	"manifest_version": 3,
	"minimum_chrome_version": "100",
	"browser_specific_settings": {
		"gecko": {
			"id": "gMailGifBackground@github.com",
			"strict_min_version": "100.0"
		}	
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"declarativeNetRequestWithHostAccess"
	],
	"declarative_net_request" : {
		"rule_resources" : [{
			"id": "ruleset",
			"enabled": true,
			"path": "rules.json"
		}]
	},
	"host_permissions": [
		"<all_urls>"
	]
}
